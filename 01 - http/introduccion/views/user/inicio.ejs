<table>
    <tr>
        <th>Name</th>
        <th>Last name</th>
        <th>DNI</th>
        <th>Actions</th>
    </tr>
    <% users.forEach( (obj) => { %>
    <tr>
        <td><%= obj.name %></td>
        <td><%= obj.last_name %></td>
        <td><%= obj.dni %></td>
        <td>
            <button>See</button>

            <a href="/usuario/view/edit/<%= obj.id %>">
                <button>Edit</button>
            </a>

            <form action="/usuario/deleteFromView/<%= obj.id %>" method="post">
                <button type="submit">Delete</button>
            </form>

        </td>
    </tr>
    <% } ) %>
</table>



