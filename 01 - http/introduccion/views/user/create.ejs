<form action="/usuario/createFromView" method="POST">
    <% const nameExists = typeof name !== 'undefined' %>
    <label for="nameID">Name:</label>
    <input id="nameID" type="text" name="name" value="<%= nameExists ? name : '' %>">
    <br>
    <% const lastNameExists = typeof last_name !== 'undefined' %>
    <label for="lastNameID">Last name:</label>
    <input id="lastNameID" type="text" name="last_name" value="<%= lastNameExists ? last_name : '' %>">
    <br>
    <% const dniExists = typeof dni !== 'undefined' %>
    <label for="dniID">DNI:</label>
    <input id="dniID" type="text" name="dni" value=" <% dniExists ? dni : '' %>">
    <br>
    <button type="submit">SUBMIT</button>
    <button type="reset">RESET</button>
    <button type="reset">BUTTON</button>

</form>

